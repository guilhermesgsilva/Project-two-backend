<div class="container">
    <div class="row margin-top-10">
        <div class="col-md-6 box-align">
            <h2>Welcome {{user.username}}</h2>
            <form class="create-form" action="/create-plan" method="POST">
                <input type="text" name="planName" placeholder="Where do you want to go?">
                <button type="submit">Create Plan</button>
            </form>
        </div>
        <div class="col-md-6 box" style="overflow-y: scroll; height:470px;">
            <ul>
                {{#each plans}}
                    <li>
                        <a href="/profile/{{id}}">My Trip to {{planName}}</a>
                        <form action="/profile/{{id}}/edit" method="GET">
                            <button type="submit">Edit</button>
                        </form>
                        <form action="/profile/{{id}}/delete" method="POST">
                            <button type="submit">Delete</button>
                        </form>
                    </li>
                {{/each}}    
            </ul>
        </div>
    </div>
</div>
