<h1>Log In</h1>
<form action="/login" method="POST">
    <label for="">Username</label>
    <input type="text" name="username" required>

    <label for="">Password</label>
    <input type="password" name="password" required>

    <button type="submit">Login</button>
</form>
{{#if errorMessage}}
    <p>{{errorMessage}}</p>
{{/if}}